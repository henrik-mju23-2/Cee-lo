<Page
    x:Class="Cee_lo.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cee_lo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style x:Key="AccentButtonStyleCopy" TargetType="Button">
            <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}"/>
            <Setter Property="Background" Value="{ThemeResource AccentButtonBackground}"/>
            <Setter Property="BackgroundSizing" Value="OuterBorderEdge"/>
            <Setter Property="BorderBrush" Value="{ThemeResource AccentButtonBorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter x:Name="ContentPresenter" AutomationProperties.AccessibilityView="Raw" Background="{TemplateBinding Background}" BackgroundSizing="{TemplateBinding BackgroundSizing}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" ContentTemplate="{TemplateBinding ContentTemplate}" CornerRadius="{TemplateBinding CornerRadius}" Content="{TemplateBinding Content}" ContentTransitions="{TemplateBinding ContentTransitions}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" Padding="{TemplateBinding Padding}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <PointerUpThemeAnimation Storyboard.TargetName="ContentPresenter"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBackgroundPointerOver}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBorderBrushPointerOver}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonForegroundPointerOver}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <PointerUpThemeAnimation Storyboard.TargetName="ContentPresenter"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBackgroundPressed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBorderBrushPressed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonForegroundPressed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <PointerDownThemeAnimation Storyboard.TargetName="ContentPresenter"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBackgroundDisabled}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBorderBrushDisabled}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonForegroundDisabled}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </ContentPresenter>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Width="1280" Height="720" Background="#FFA3A3A3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="InfoButton" Content="i" Margin="10,10,0,0" VerticalAlignment="Top" Background="#FF0062FF" BorderBrush="Black" Height="75" Width="75" CornerRadius="15,15,15,15" BorderThickness="1,1,1,1" FontSize="70" FontFamily="Mongolian Baiti" Click="InfoButton_Click" Style="{StaticResource AccentButtonStyle}"/>
        <Rectangle x:Name="Rectangle1" HorizontalAlignment="Left" Height="667" Stroke="Black" VerticalAlignment="Center" Width="888" Fill="#FF2BA748" RadiusX="15" RadiusY="15" Margin="196,0,0,0" Grid.ColumnSpan="2"/>
        <Rectangle x:Name="Rectangle2_Copy14" HorizontalAlignment="Left" Height="111" Stroke="Black" VerticalAlignment="Top" Width="111" Fill="White" RadiusX="15" RadiusY="15" Margin="233,498,0,0"/>
        <Rectangle x:Name="Rectangle2_Copy15" HorizontalAlignment="Left" Height="51" Stroke="Black" VerticalAlignment="Top" Width="50" Fill="#FF0062FF" RadiusX="360" RadiusY="360" Margin="263,509,0,0"/>
        <Rectangle x:Name="Rectangle2_Copy16" HorizontalAlignment="Left" Height="38" Stroke="Black" VerticalAlignment="Top" Width="79" Fill="#FF0062FF" RadiusY="30" RadiusX="30" Margin="247,570,0,0"/>
        <Rectangle x:Name="Rectangle2_Copy17" HorizontalAlignment="Left" Height="19" Stroke="Black" VerticalAlignment="Top" Width="79" Fill="#FF0062FF" Margin="247,589,0,0"/>
        <Rectangle x:Name="Rectangle2_Copy18" HorizontalAlignment="Left" Height="21" Stroke="Black" VerticalAlignment="Top" Width="78" Fill="#FF0062FF" StrokeThickness="0" Margin="249,586,0,0"/>
        <Rectangle x:Name="Rectangle2_Copy19" HorizontalAlignment="Left" Height="111" Stroke="Black" VerticalAlignment="Top" Width="111" Fill="White" RadiusX="15" RadiusY="15" Margin="231,128,0,0"/>
        <Rectangle x:Name="Rectangle2_Copy20" HorizontalAlignment="Left" Height="51" Stroke="Black" VerticalAlignment="Top" Width="50" Fill="#FF0062FF" RadiusX="360" RadiusY="360" Margin="261,139,0,0"/>
        <Rectangle x:Name="Rectangle2_Copy21" HorizontalAlignment="Left" Height="38" Stroke="Black" VerticalAlignment="Top" Width="79" Fill="#FF0062FF" RadiusY="30" RadiusX="30" Margin="245,200,0,0"/>
        <Rectangle x:Name="Rectangle2_Copy22" HorizontalAlignment="Left" Height="19" Stroke="Black" VerticalAlignment="Top" Width="79" Fill="#FF0062FF" Margin="245,219,0,0"/>
        <Rectangle x:Name="Rectangle2_Copy23" HorizontalAlignment="Left" Height="21" Stroke="Black" VerticalAlignment="Top" Width="78" Fill="#FF0062FF" StrokeThickness="0" Margin="247,216,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="246,237,0,0" TextWrapping="Wrap" Text="Spelare 2" VerticalAlignment="Top" Foreground="Black" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="248,612,0,0" TextWrapping="Wrap" Text="Spelare 1" VerticalAlignment="Top" Foreground="Black" FontSize="20"/>
        <Button x:Name="DieButton" Margin="418,518,0,0" VerticalAlignment="Top" Width="128" Height="128" CornerRadius="15,15,15,15" BorderBrush="Black" BorderThickness="1,1,1,1" Click="DieButton_Click" Grid.Column="1" Style="{StaticResource AccentButtonStyle}">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/DieButtonImage.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="454,481,0,0" TextWrapping="Wrap" Text="Rulla" VerticalAlignment="Top" Foreground="Black" FontSize="24" FontWeight="Bold" SelectionChanged="TextBlock_SelectionChanged" Grid.Column="1"/>
        <Button x:Name="BankDieSlot1" Content="" Margin="451,128,0,0" VerticalAlignment="Top" Width="113" Height="113" Grid.ColumnSpan="2" Click="BankDieSlot1_Click">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Assets/DieSlot.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="DieSlot1" Content="" Margin="457,498,0,0" VerticalAlignment="Top" Width="113" Height="113" Click="DieSlot1_Click" Style="{StaticResource AccentButtonStyle}" Grid.ColumnSpan="2" IsTapEnabled="False" IsRightTapEnabled="False" IsHoldingEnabled="False" IsDoubleTapEnabled="False">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/DieSlot.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="DieSlot2" Content="" Margin="91,498,0,0" VerticalAlignment="Top" Width="113" Height="113" Click="DieSlot2_Click" Style="{StaticResource AccentButtonStyle}" Grid.Column="1" IsTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/DieSlot.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="DieSlot3" Content="" Margin="234,498,0,0" VerticalAlignment="Top" Width="113" Height="113" Click="DieSlot3_Click" Style="{StaticResource AccentButtonStyle}" Grid.Column="1" IsTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/DieSlot.png"/>
            </Button.Background>
        </Button>
        <Rectangle x:Name="BlurRectangle" Height="720" Stroke="Black" Width="1280" Fill="Black" HorizontalAlignment="Left" VerticalAlignment="Center" Opacity="0.5" Grid.ColumnSpan="2" d:IsHidden="True"/>
        <Popup x:Name="InformationPopUp" Width="1024" Height="576" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="119,78,0,0" IsLightDismissEnabled="False" IsOpen="False">
            <StackPanel Background="White" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid Width="1024" Height="576" Background="#FFA3A3A3" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="1,1,1,1">
                    <TextBlock x:Name="InformationTitleText" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="Information" VerticalAlignment="Top" FontSize="70"/>
                    <ScrollViewer x:Name="InformationScrollViewer" Background="White" Width="800" Height="400" CornerRadius="15,15,15,15" BorderBrush="Black" BorderThickness="1,1,1,1" FontSize="24" Foreground="Black" HorizontalScrollMode="Disabled" VerticalScrollMode="Enabled" MaxZoomFactor="10">
                        <TextBlock x:Name="InfoTextBlock" TextWrapping="Wrap" Text="Programmet är en digital version av tärningsspelet Yatzy. Yatzy är ett tärningsspel med plats för ett obegränsat antal deltagare där vinnaren blir den som uppnått högst poäng efter spelets slut. Spelet använder sig av fem tärningar och varje spelare får rätt till tre tärningskast vid sin tur. I det första kastet används alla fem tärningar, men på de följande kasten bestämmer spelaren själv vilka tärningar spelaren vill slå om. Poängsumman införs i ett protokoll efter varje tur. Varje rad i protokollet motsvarar en regel som tärningarna måste uppfylla för att räknas. Till exempel på raden femmor får man endast skriva in poängen från de tärningar som visar 5." FontSize="30" Margin="15,15,15,15"/>
                    </ScrollViewer>
                    <Button x:Name="BackButton" Content="Tillbaka" Margin="0,495,0,0" VerticalAlignment="Top" Background="#FF0062FF" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="15,15,15,15" Height="75" Width="175" FontSize="48" HorizontalAlignment="Center" Click="BackButton_Click"/>
                </Grid>
            </StackPanel>
        </Popup>
        <TextBlock x:Name="PlayerPointsTextBlock" HorizontalAlignment="Left" Margin="357,498,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" SelectionChanged="PlayerPointsTextBlock_SelectionChanged_1" FontSize="30"><Run Text="Poäng:"/><LineBreak/><Run Text=" 0"/></TextBlock>
        <Button x:Name="EndButton" Content="Avsluta" Margin="586,564,0,0" VerticalAlignment="Top" Width="175" Height="75" Background="#FF0062FF" CornerRadius="15,15,15,15" BorderBrush="Black" BorderThickness="1,1,1,1" FontSize="36" Click="EndButton_Click" Grid.Column="1"/>
        <TextBlock x:Name="InfoTextBlock1" HorizontalAlignment="Left" Margin="408,0,0,0" TextWrapping="Wrap" Text="Bank rullar först" VerticalAlignment="Center" Foreground="Red" FontSize="72" Grid.ColumnSpan="2" SelectionChanged="InfoTextBlock_SelectionChanged"/>
        <TextBlock x:Name="BankPointsTextBlock" HorizontalAlignment="Left" Margin="357,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30" Foreground="Black" Text="Poäng:&#xD;&#xA;0" SelectionChanged="BankPointsTextBlock_SelectionChanged"/>
        <Button x:Name="BankDieSlot2" Grid.Column="1" Content="" Margin="91,128,0,0" VerticalAlignment="Top" Width="113" Height="113" Click="BankDieSlot2_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/DieSlot.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BankDieSlot3" Grid.Column="1" Margin="234,128,0,0" VerticalAlignment="Top" Width="113" Height="113" Click="BankDieSlot3_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/DieSlot.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>